   "source": [
    "n = int(input(\"숫자를 입력하시오 : \"))\n",
    "total_sum = 0\n",
    "\n",
    "for i in range(n+1):\n",
    "    total_sum += 2 ** i\n",
    "\n",
    "print(\"2^0부터 2^\" + str(n) + \"까지의 합은 \" + str(total_sum) + \"입니다.\")"
   ]
  }
